{
  "name": "jarvis-voice-todo",
  "version": "1.0.0",
  "description": "Voice-controlled todo.txt desktop application with Layercode and OpenAI integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "test": "jest",
    "vercel-build": "echo 'No build step required for serverless functions'"
  },
  "keywords": [
    "electron",
    "todo",
    "voice",
    "layercode",
    "openai",
    "desktop"
  ],
  "author": "Lance Jones",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@layercode/node-server-sdk": "^1.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "openai": "^4.20.1"
  },
  "build": {
    "appId": "com.jarvis.voice-todo",
    "productName": "JARVIS Voice Todo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
