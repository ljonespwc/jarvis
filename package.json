{
  "name": "jarvis-voice-todo",
  "version": "1.0.0",
  "description": "Voice-controlled todo.txt desktop application with Layercode and OpenAI integration",
  "main": "main.js",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "start": "npm run next:build && electron .",
    "dev": "electron . --dev",
    "dev:build": "npm run next:build && electron . --dev",
    "build": "npm run next:build && electron-builder",
    "test": "jest",
    "vercel-build": "echo 'No build step required for serverless functions'"
  },
  "keywords": [
    "electron",
    "todo",
    "voice",
    "layercode",
    "openai",
    "desktop"
  ],
  "author": "Lance Jones",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@layercode/node-server-sdk": "^1.2.1",
    "@layercode/react-sdk": "^1.0.29",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "next": "^15.4.6",
    "openai": "^4.20.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.jarvis.voice-todo",
    "productName": "JARVIS Voice Todo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*",
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
